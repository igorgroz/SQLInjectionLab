import React from 'react';
import { gql, useQuery } from '@apollo/client';

// GraphQL Query for secure users
const GET_SAFE_USERS = gql`
  query {
    getSafeUsers {
      userid
      name
      surname
    }
  }
`;

const GRAPHQL_API_URL = 'http://localhost:5001/graphql'; // GraphQL API URL

const SecureUsersGraphQLPage = () => {
  const { data: graphQLData, loading: graphQLLoading, error: graphQLError } = useQuery(GET_SAFE_USERS);

  if (graphQLLoading) return <p>Loading...</p>;
  if (graphQLError) return <p>Error: {graphQLError.message}</p>;

  return (
    <div>
      <h1>Secure Users (GraphQL)</h1>
      <h2>Retrieves users using GraphQL API</h2>
      <p>
        API Endpoint: <span style={{ color: 'blue', fontStyle: 'italic', fontWeight: 'bold' }}>{GRAPHQL_API_URL}</span>
      </p>
      <p>Query String:</p>
      <pre style={{ color: 'green', fontStyle: 'italic' }}>{GET_SAFE_USERS.loc.source.body}</pre>
      <h3>Results:</h3>
      <ul>
        {graphQLData?.getSafeUsers?.map((user) => (
          <li key={user.userid}>{user.userid} {user.name} {user.surname}</li>
        ))}
      </ul>
    </div>
  );
};

export default SecureUsersGraphQLPage;
